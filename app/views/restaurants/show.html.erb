<div class="container">

  <% @restaurant.reviews.each do |review| %>
    <div class="card">
      <div class="card-header">
        <%= "<i class='fa-solid fa-star'></i>".html_safe * review.rating.to_i %>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= review.content %></p>
          <footer class="blockquote-footer">Created at <cite title="Source Title"><%= review.created_at %></cite></footer>
        </blockquote>
      </div>
    </div>
  <% end %>
</div>
